from m5stack import *
from m5ui import *
from uiflow import *
import unit
import time

setScreenColor(0x222222)
tvoc0 = unit.get(unit.TVOC, unit.PORTC)
co2_level = tvoc0.eCO2


label9 = M5TextBox(34, 48, "CO2 now:", lcd.FONT_DejaVu18, 0x00FF00, rotate=0)


while True:
    # Lire les valeurs de CO2
    co2_level = str(tvoc0.eCO2)
    
    # Mettre à jour le label avec la valeur de CO2
    label9.setText("CO2 now: " + co2_level + " ppm")
    
    wait(0.5)
    wait_ms(2)  # Rafraîchir toutes les minutes
